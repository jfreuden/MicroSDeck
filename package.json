{
	"name": "microsdeck",
	"version": "0.0.0",
	"description": "A SteamDeck plugin to track games across MicroSD cards",
	"keywords": [
		"decky",
		"plugin",
		"steam-deck",
		"deck",
		"miocrosd-card",
		"microsd"
	],
	"author": "Christopher-Robin <git@cebbinghaus.com>",
	"license": "GPL-2.0",
	"scripts": {
		"build": "shx rm -rf dist && rollup -c",
		"watch": "rollup -c -w",
		"preinstall": "cd lib && pnpm i"
	},
	"bugs": {
		"url": "https://github.com/CEbbinghaus/MicroSDeck/issues"
	},
	"homepage": "https://github.com/CEbbinghaus/MicroSDeck#readme",
	"devDependencies": {
		"@rollup/plugin-commonjs": "^21.1.0",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-replace": "^4.0.0",
		"@rollup/plugin-typescript": "^8.5.0",
		"@types/react": "16.14.0",
		"@types/webpack": "^5.28.5",
		"rollup": "^2.79.1",
		"rollup-plugin-import-assets": "^1.1.1",
		"shx": "^0.3.4",
		"tslib": "^2.6.2",
		"typescript": "^4.9.5"
	},
	"dependencies": {
		"@cebbinghaus/microsdeck": "link:lib",
		"decky-frontend-lib": "^3.24.5",
		"lipe": "^0.3.3",
		"react-icons": "^4.12.0"
	},
	"pnpm": {
		"peerDependencyRules": {
			"ignoreMissing": [
				"react",
				"react-dom"
			]
		}
	}
}